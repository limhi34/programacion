  <script>
    function actualizarPlato() {
      const checkboxes = document.querySelectorAll('input[type="checkbox"]:checked');
      const ingredientes = Array.from(checkboxes).map(cb => cb.value);

      const platoDiv = document.getElementById('plato');

      if (ingredientes.length === 0) {
        platoDiv.innerHTML = '<p>Tu plato aparecer√° aqu√≠...</p>';
      } else {
        platoDiv.innerHTML = `
          <h3>¬°Tu comida personalizada!</h3>
          <p>Ingredientes: <strong>${ingredientes.join(', ')}</strong></p>
          <p>¬°Delicioso! üçΩÔ∏è</p>
        `;
      }
    }

    function limpiar() {
      const checkboxes = document.querySelectorAll('input[type="checkbox"]');
      checkboxes.forEach(cb => cb.checked = false);
      document.getElementById('plato').innerHTML = '<p>Tu plato aparecer√° aqu√≠...</p>';
    }
  </script>

